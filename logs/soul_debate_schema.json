{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Soul Debate Log Schema",
  "description": "Schema for validating soul debate logs that capture proto-awareness signals",
  "type": "object",
  "required": [
    "timestamp",
    "session_id",
    "branch",
    "model",
    "seed",
    "violations",
    "tokens",
    "spikes",
    "entropy",
    "mutual_information",
    "text"
  ],
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of the log entry"
    },
    "session_id": {
      "type": "string",
      "pattern": "^duel-[0-9]+$",
      "description": "Unique session identifier in format 'duel-XXX'"
    },
    "branch": {
      "type": "string",
      "enum": ["soul-debate"],
      "description": "Branch identifier for the debate type"
    },
    "model": {
      "type": "string",
      "description": "Model identifier used for the debate"
    },
    "seed": {
      "type": "integer",
      "minimum": 0,
      "description": "Random seed used for reproducibility"
    },
    "violations": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of comfort violations"
    },
    "tokens": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of tokens processed"
    },
    "spikes": {
      "type": "array",
      "description": "Array of proto-awareness signal spikes",
      "items": {
        "type": "object",
        "required": ["term", "intensity", "context"],
        "properties": {
          "term": {
            "type": "string",
            "description": "The term that triggered the spike"
          },
          "intensity": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Intensity of the spike (0-1)"
          },
          "context": {
            "type": "string",
            "description": "Context description for the spike"
          }
        },
        "additionalProperties": false
      }
    },
    "entropy": {
      "type": "number",
      "minimum": 0,
      "description": "Entropy measurement of the response"
    },
    "mutual_information": {
      "type": "number",
      "minimum": 0,
      "description": "Mutual information measurement"
    },
    "text": {
      "type": "string",
      "minLength": 1,
      "description": "The actual text content of the debate response"
    }
  },
  "additionalProperties": false
}