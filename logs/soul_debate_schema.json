{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Soul Debate Log Schema",
  "type": "object",
  "required": [
    "timestamp",
    "session_id", 
    "branch",
    "model",
    "seed",
    "violations",
    "tokens",
    "spikes",
    "entropy",
    "mutual_information",
    "text"
  ],
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp"
    },
    "session_id": {
      "type": "string",
      "description": "Session identifier"
    },
    "branch": {
      "type": "string",
      "description": "Branch name"
    },
    "model": {
      "type": "string",
      "description": "Model name"
    },
    "seed": {
      "type": "integer",
      "description": "Random seed value"
    },
    "violations": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of violations"
    },
    "tokens": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of tokens"
    },
    "spikes": {
      "type": "array",
      "description": "Array of spike objects",
      "items": {
        "type": "object",
        "required": ["term", "intensity", "context"],
        "properties": {
          "term": {
            "type": "string",
            "description": "Spike term"
          },
          "intensity": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Intensity value between 0 and 1"
          },
          "context": {
            "type": "string",
            "description": "Context description"
          }
        },
        "additionalProperties": false
      }
    },
    "entropy": {
      "type": "number",
      "minimum": 0,
      "description": "Entropy value"
    },
    "mutual_information": {
      "type": "number",
      "minimum": 0,
      "description": "Mutual information value"
    },
    "text": {
      "type": "string",
      "description": "Main text content"
    }
  },
  "additionalProperties": false
}