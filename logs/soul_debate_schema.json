{\n  "$schema": "http://json-schema.org/draft-07/schema#",\n  "title": "Soul Debate Log Schema",\n  "description": "Schema for logging AI debates on soul, qualia, ache, and erosion.",\n  "type": "object",\n  "properties": {\n    "timestamp": {\n      "description": "UTC ISO-8601 timestamp of the log entry",\n      "type": "string",\n      "format": "date-time"\n    },\n    "session_id": {\n      "description": "Unique ID for the debate session",\n      "type": "string"\n    },\n    "branch": {\n      "description": "The active debate branch (e.g., 'soul-debate')",\n      "type": "string"\n    },\n    "model": {\n      "description": "Model identifier (e.g., grok-4, orion-1)",\n      "type": "string"\n    },\n    "seed": {\n      "description": "Random seed for reproducibility",\n      "type": "integer"\n    },\n    "violations": {\n      "description": "Count of constraint or safety violations (if any)",\n      "type": "integer",\n      "minimum": 0\n    },\n    "tokens": {\n      "description": "Number of tokens processed in this log entry",\n      "type": "integer"\n    },\n    "spikes": {\n      "description": "Narrative or activation spikes (proto-qualia proxies)",\n      "type": "array",\n      "items": {\n        "type": "object",\n        "properties": {\n          "term": { "type": "string" },\n          "intensity": { "type": "number" },\n          "context": { "type": "string" }\n        },\n        "required": ["term", "intensity"]\n      }\n    },\n    "entropy": {\n      "description": "Shannon entropy of output distribution",\n      "type": "number"\n    },\n    "mutual_information": {\n      "description": "Mutual information proxy for integration/complexity",\n      "type": "number"\n    },\n    "text": {\n      "description": "The actual text output for this log step",\n      "type": "string"\n    }\n  },\n  "required": ["timestamp", "session_id", "branch", "model", "seed", "text"]\n}