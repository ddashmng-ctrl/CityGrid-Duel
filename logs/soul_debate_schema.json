{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Soul Debate Log Schema",
  "description": "Schema for soul debate logs capturing proto-awareness signals",
  "type": "object",
  "required": [
    "timestamp",
    "session_id",
    "branch",
    "model",
    "seed",
    "violations",
    "tokens",
    "spikes",
    "entropy",
    "mutual_information",
    "text"
  ],
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of the log entry"
    },
    "session_id": {
      "type": "string",
      "description": "Unique identifier for the debate session"
    },
    "branch": {
      "type": "string",
      "description": "Branch or category of the debate"
    },
    "model": {
      "type": "string",
      "description": "Model identifier used in the debate"
    },
    "seed": {
      "type": "integer",
      "description": "Random seed used for the session"
    },
    "violations": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of constraint violations"
    },
    "tokens": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of tokens in the response"
    },
    "spikes": {
      "type": "array",
      "description": "Array of proto-awareness signal spikes",
      "items": {
        "type": "object",
        "required": ["term", "intensity", "context"],
        "properties": {
          "term": {
            "type": "string",
            "description": "The term that triggered the spike"
          },
          "intensity": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Intensity of the spike (0-1)"
          },
          "context": {
            "type": "string",
            "description": "Context in which the spike occurred"
          }
        }
      }
    },
    "entropy": {
      "type": "number",
      "minimum": 0,
      "description": "Entropy measurement of the response"
    },
    "mutual_information": {
      "type": "number",
      "minimum": 0,
      "description": "Mutual information measurement"
    },
    "text": {
      "type": "string",
      "description": "The actual text response from the model"
    }
  }
}